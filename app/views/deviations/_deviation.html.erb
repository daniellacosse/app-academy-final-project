<div class="_deviation" data-id="<%= deviation.id %>">
  <img width="300" class="_deviation-media" src="<%= deviation.media.url %>">

  <h2 class="_deviation-title">
    <a href="<%= deviation_url(deviation) %>"><%= deviation.title %></a>
  </h2>

  <span class="_deviation-author">
    <img src="<%= deviation.user.avatar.url(:icon) %>">
    by ~<a href="<%= user_url(deviation.user) %>">
      <%= deviation.user.username %>
    </a>
  </span>

  <p class="_deviation-description">
    <%= deviation.description %>
  </p>
</div>
