<%= render partial: "deviations/info", locals: { deviation: deviation } %>
<section class="media">
  <div class="close-button">
    X
  </div>
  <table>
    <tr>
      <td>
        <img class="deviation-media" src="<%= deviation.media.url %>">
      </td>
    </tr>
  </table>
  <script>
    $(".media").on("click", function(event) {
      $(event.target).closest(".lightbox").remove()
    })

    $(".deviation-media").on("click", function(event) {
      event.stopPropagation();
      event.preventDefault();
    })
  </script>
</section>
